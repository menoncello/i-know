{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/utils/*": ["./src/utils/*"],
      "@i-know/types": ["../../packages/types/src"],
      "@i-know/database": ["../../packages/database/src"],
      "@i-know/utils": ["../../packages/utils/src"],
      "@i-know/scraper": ["../../apps/scraper/src"]
    }
  },
  "include": ["**/*.ts"]
}
