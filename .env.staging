# Staging Environment Configuration
# This file contains staging-specific environment variables
# DO NOT commit sensitive data like API keys or passwords

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Database Configuration (Staging)
DATABASE_URL=postgresql://username:password@staging-db-host:5432/i-know-staging
POSTGRES_HOST=staging-db-host
POSTGRES_PORT=5432
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password
POSTGRES_DB=i-know-staging

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_URL=https://api-staging.i-know.app

# CORS Configuration (Staging)
CORS_ORIGIN=https://staging.i-know.app,https://i-know.app

# Security
JWT_SECRET=your-staging-jwt-secret-key-here
SESSION_SECRET=your-staging-session-secret-here

# External Services
REDIS_URL=redis://staging-redis-host:6379
IMDB_API_KEY=your-staging-imdb-api-key

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-staging-sentry-dsn

# Feature Flags
ENABLE_METRICS=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# Deployment
DEPLOY_ENVIRONMENT=staging
RAILWAY_TOKEN=your-staging-railway-token