{
  "name": "i-know",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@faker-js/faker": "^9.0.0",
    "@playwright/test": "^1.48.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-plugin-astro": "^1.4.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.11",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "bun@1.3.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "bun --cwd apps/web dev",
    "dev:api": "bun --cwd apps/api dev",
    "dev:scraper": "bun --cwd apps/scraper dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "turbo run clean",
    "clean:all": "bun run clean && rm -rf node_modules .turbo && bun install",
    "type-check": "turbo run type-check",
    "typecheck": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "bun run packages/database/scripts/migrate.ts",
    "db:seed": "bun run packages/database/scripts/seed.ts",
    "db:reset": "bun run db:migrate && bun run db:seed",
    "setup": "bun install && bun run db:migrate && bun run db:seed",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
